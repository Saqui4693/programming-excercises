#declare variables
sales = 0.0
stateTax = 0.0
countyTax = 0.0
totalTax = 0.0

#constants for state and county tax rates
STATE_TAX_RATE = 0.05
COUNTY_TAX_RATE = 0.025

#get total sales for the month
sales = float(input('Enter the total sales for the month: '))

#calculate the state tax
stateTax = sales * STATE_TAX_RATE

#calculate county tax
countyTax = sales * COUNTY_TAX_RATE

#calculate total tax
totalTax = stateTax + countyTax

#print the info
print(f'State tax: ${stateTax:,.2f}')
print(f'County tax: ${countyTax:,.2f}')
print(f'Total tax: ${totalTax:,.2f}')