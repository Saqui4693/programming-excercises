#get number of days
days = int(input("Enter the number of days: "))

#set variables
salary = 0.01
total = 0.0

#make header
print("Day     Salary")
print("--------------")

#create loop for salary
for day in range(1, days+1):
    print(f"{day:<5} ${salary:.2f}")
    total += salary
    salary *= 2

#display total pay
print(f"\nTotal pay: ${total:.2f}")
