# assign variables
food = 0.0
tip = 0.0
tax = 0.0
total = 0.0
# constants for the tax rate and tip
TAX_RATE = 0.07
TIP_RATE = 0.18
# get the food charges
food = float(input("Enter the charge for food: "))
# calculate the tip
tip = food + TIP_RATE
#calculate the tax
tax = food + TAX_RATE
# calculate total
total = food + tip + tax
# print info
print(f"Tip: ${tip:.2f}")
print(f"Tax: ${tax:.2f}")
print(f"Total: ${total:.2f}")